<h3>Post a comment</h3>

<%= form_for [ @job, @comment] do |f| %>
  <p>
    <%= f.label :author, "Your Name" %><br/>
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :content, "Your Comment" %><br/>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<%end%>
