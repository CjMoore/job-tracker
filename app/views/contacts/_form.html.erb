<h3>Add a Contact</h3>

<%= form_for [@company, @contact] do |f| %>
  <p>
    <%= f.label :name, "Name" %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :position, "Position" %><br/>
    <%= f.text_area :position %>
  </p>
  <p>
    <%= f.label :email, "Email" %><br/>
    <%= f.text_area :email %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<%end%>
